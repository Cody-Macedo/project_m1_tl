{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <div>
        <h1>Room index</h1>
        <a style="float: right; margin-right: 30px" class="btn btn-outline-primary" href="{{ path('room_new') }}">Create new + </a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Capacity</th>
            <th>Ville</th>
            <th>User</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.ville }}</td>
                {# affichage de l'utilisateur ayant créé la room #}
                {% if room.user is not null %}
                    <td>{{ room.user.id }}</td>
                {% else %}
                    <td> no user define</td>
                {% endif %}
                <td>
                    <a class="btn btn-outline-info" href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
